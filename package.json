{
    "name": "angular-schule-extension-pack",
    "displayName": "Angular.Schule: Extension Pack",
    "description": "A list of extensions for our angular workshops",
    "icon": "images/angular-shield.png",
    "galleryBanner": {
        "color": "#6661c0",
        "theme": "dark"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/angular-schule/vscode-angular-schule-extension-pack.git"
    },
    "keywords": [
        "Angular",
        "Angular Schule",
        "Angular.Schule",        
        "TypeScript",
        "workshop"
    ],
    "version": "0.1.2",
    "publisher": "angular-schule",
    "engines": {
        "vscode": "^1.12.0"
    },
    "categories": [
        "Extension Packs"
    ],
    "extensionDependencies": [
        "eg2.tslint",
        "Angular.ng-template",
        "EditorConfig.EditorConfig",
        "robertohuertasm.vscode-icons",
        "msjsdiag.debugger-for-chrome",
        "christian-kohler.path-intellisense",
        "CoenraadS.bracket-pair-colorizer",
        "formulahendry.auto-rename-tag"
    ],
    "activationEvents": [
        "onCommand:extension.getVersion",
        "onCommand:extension.updateConfig",
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.updateConfig",
                "title": "Update User Settings (configuration in settings.json)",
                "category": "Angular.Schule"
            },            
            {
                "command": "extension.getVersion",
                "title": "Get Version",
                "category": "Angular.Schule"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Angular-Schule: Extension Pack",
            "properties": {
                "angular-schule.configUpdated": {
                    "type": "boolean",
                    "default": false,
                    "description": "If set to 'true', the extension will not update the user settings again. This setting is to 'true' after update."
                }
            }
        }        
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.5.3",
        "vscode": "^1.1.5",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
